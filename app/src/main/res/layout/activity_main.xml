<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee4d5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/top_background" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/line1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:text="Keliling &amp; Luas\nSegitiga"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#434d94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_red"
                    android:text="Segitiga Siku-Siku"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_red"
                    android:text="Segitiga Sama Kaki"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_red"
                    android:text="Segitiga Sama Sisi"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_red"
                    android:text="Segitiga Sembarang"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="100sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="100sp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_red"
                    android:text="Exit"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>